<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <body>
       <!-- Use of view Model -->
       <referenceBlock name="content">
            <block class="Magento\Framework\View\Element\Template" name="category.attr" template="Pawan_ViewModel::view_model.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Pawan\ViewModel\ViewModel\MyViewModel</argument>
                </arguments>
            </block>
         </referenceBlock>
   </body>
</page>